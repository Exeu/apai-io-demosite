<html>
<head>
  <title>Apai-IO Demo Site</title>

  <link rel="stylesheet" href="{{ app.request.basepath }}/css/bootstrap.css" />
  <link rel="stylesheet" href="{{ app.request.basepath }}/css/bootswatch.css" />
  <link rel="stylesheet" href="{{ app.request.basepath }}/fancybox/jquery.fancybox.css" />
</head>

<body class="preview" data-spy="scroll" data-target=".subnav" data-offset="80">
 <div class="navbar navbar-fixed-top">
   <div class="navbar-inner">
     <div class="container-fluid">
       <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"></a>
       <a class="brand" href="#">ApaiIO Demo</a>
       <ul class="nav" id="main-menu-right">
       	<li><a href="http://silex.sensiolabs.org/" target="_blank">powered by Silex</a></li>
        <li><a href="http://twig.sensiolabs.org/" target="_blank">powered by Twig</a></li>
       </ul>

       <div class="nav-collapse collapse" id="main-menu">
        <ul class="nav pull-right" id="main-menu-right">
          <li><a rel="tooltip" target="_blank" href="https://github.com/Exeu/apai-io" title="View it on github">View it on Github <i class="icon-share"></i></a></li>
        </ul>
       </div>
     </div>
   </div>
 </div>

 <div class="container-fluid">
 <header class="jumbotron subhead" id="overview">
  <div class="subform">
    <form class="well form-inline" id="search-form">
        {{ form_label(form.search) }}
        {{ form_widget(form.search, { 'attr': {'class': 'input-xlarge'}}) }}

        {{ form_label(form.category) }}
        {{ form_widget(form.category, { 'attr': {'class': 'input-small'}}) }}

        {{ form_label(form.locale) }}
        {{ form_widget(form.locale, { 'attr': {'class': 'input-small'}}) }}

        {{ form_label(form.page) }}
        {{ form_widget(form.page, { 'attr': {'class': 'input-mini'}}) }}

        {{ form_rest(form) }}

        <button type="submit" class="btn btn-primary" id="search-action" data-uri="{{ app.request.basepath }}/api/search">Go!</button>
  </form>
  </div>
 </header>

 <div class="row" id="iso"></div>

 </div>

  <script type="text/javascript" src="{{ app.request.basepath }}/js/jquery-1.10.2.min.js"></script>
  <script type="text/javascript" src="{{ app.request.basepath }}/js/jquery.isotope.min.js"></script>
  <script type="text/javascript" src="{{ app.request.basepath }}/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="{{ app.request.basepath }}/js/jquery.smooth-scroll.min.js"></script>
  <script type="text/javascript" src="{{ app.request.basepath }}/fancybox/jquery.fancybox.pack.js"></script>
  <script type="text/javascript" src="{{ app.request.basepath }}/js/imgLiquid-min.js"></script>
  <script type="text/javascript" src="{{ app.request.basepath }}/js/bootswatch.js"></script>
  <script type="text/javascript" src="{{ app.request.basepath }}/js/page.js"></script>
</body>
</html>
